#!/usr/bin/env python2.7

import sys
import os
dev_path = os.path.abspath(os.path.join(os.path.dirname(__file__), '..', '..', '..'))
sys.path.insert(0, dev_path)

import mr
root_path = os.path.abspath(os.path.join(os.path.dirname(mr.__file__), '..'))

os.chdir(root_path)

os.environ['DEBUG'] = '1'
os.environ['MR_WORKFLOW_NAMES'] = 'dev'
#MR_USE_FAKE_QUEUE=1 \
#MR_FAKE_QUEUE_SPOOL_PATH=$CWD/../fake_spool_path \
#MR_MULTITHREADED=0 \

import subprocess

cmd = ['gunicorn', '-c', 'mr/resources/data/gunicorn_conf_dev.py', 'mr.app.main:app']

p = subprocess.Popen(cmd, env=os.environ.copy())
r = p.wait()
if r != 0:
    raise EnvironmentError("Gunicorn launch failed.")
