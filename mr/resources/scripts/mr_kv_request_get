#!/usr/bin/env python2.7

import sys
import os.path
dev_path = os.path.abspath(os.path.join(os.path.dirname(__file__), '..', '..', '..'))
sys.path.insert(0, dev_path)

import argparse
import pprint

import mr.config.log
import mr.models.kv.workflow
import mr.models.kv.job
import mr.models.kv.request

description = "Get a request entity"

parser = argparse.ArgumentParser(description=description)

parser.add_argument('workflow_name', help='Workflow name')
parser.add_argument('request_id', help='Request ID')

args = parser.parse_args()

w = mr.models.kv.workflow.WorkflowKv()
workflow = w.get_by_name(args.workflow_name)

r = mr.models.kv.request.RequestKv()
result = r.get_by_workflow_and_id(workflow, args.request_id)

pprint.pprint(result)
